{
  "Routes": [
    {
      "UpstreamPathTemplate": "/auth/info/{email}/{password}",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/auth/info/{email}/{password}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Port": 80,
          "Host": "auth_app"
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "RouteClaimsRequirement": {
        "Role" : [ "Admin", "ActivatedUser" ]
      }
    },
    {
      "UpstreamPathTemplate": "/auth/register",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/auth/register",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Port": 80,
          "Host": "auth_app"
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/auth/refresh-token",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/auth/refresh-token",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Port": 80,
          "Host": "auth_app"
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "RouteClaimsRequirement": {
        "Role" : [ "Admin", "ActivatedUser" ]
      }
    },
    {
      "UpstreamPathTemplate": "/auth/login",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/auth/login",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Port": 80,
          "Host": "auth_app"
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/auth/logout",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/auth/logout",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Port": 80,
          "Host": "auth_app"
        }
      ]
    },
    {
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
      "UpstreamPathTemplate": "/api/chat/negotiate",
      "DownstreamPathTemplate": "/my-chat/negotiate",
      "DownstreamScheme": "ws",
      "DownstreamHostAndPorts": [
        { "Host": "chat_app", "Port": 80 }
      ]
    },
    {
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
      "UpstreamPathTemplate": "/api/chat",
      "DownstreamPathTemplate": "/my-chat",
      "DownstreamScheme": "ws",
      "DownstreamHostAndPorts": [
        { "Host": "chat_app", "Port": 80 }
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:8009"
  }
}